md-dialog
  md-toolbar
    .md-toolbar-tools
      span Create Project
  md-content(layout="column" layout-fill)
    form
      md-input-container
        label Name
        input(type="text" ng-model="project.name")
      md-input-container
        label Location
        input(type="text" ng-model="project.location")
      md-checkbox.md-primary.checkbox(aria-label="billable" ng-model="project.billable") Billable
      md-checkbox.md-primary.checkbox(aria-label="internal" ng-model="project.internal_billable") Internal Billable
  .md-actions(layout="row" layout-align="space-around center")
    md-button.md-primary(ng-click="save()") Save